<div class="max-w-md ">
  <div class="text-5xl">
    {{ section.settings.title | t }}
  </div>
  <div class="my-4">
    <p class="">
      {{ section.settings.subtext_title | t }}</p>
  </div>

  <div>

    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}

    <a href="{{ shop_url }}">
      {{ section.settings.button_label }}</a>
  </div>
</div>


{% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "class": "flex items-center justify-center py-7 h-screen",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "404",
        "label": "404 Heading Title"

      }, {
        "type": "text",
        "id": "subtext_title",
        "default": "The page that you are looking for not found",
        "label": "404 Subtext Title"
      }, {
        "type": "text",
        "id": "button_label",
        "default": "Back to homepage",
        "label": "Backlink"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button url"
      }
    ]
  }
{% endschema %}

